<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/list_item_padding">

    <TextView
        android:id="@+id/poke_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_left_right_margin"
        android:layout_marginRight="@dimen/list_item_left_right_margin"
        android:textSize="@dimen/app_font_medium"
        app:layout_constraintTop_toTopOf="@id/poke_image"
        app:layout_constraintBottom_toBottomOf="@id/poke_image"

        app:layout_constraintLeft_toRightOf="@id/poke_image"
        tools:text="Ooppazavr" />

    <ImageView
        android:id="@+id/poke_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/results_type_name"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="@string/dash" />

    <TextView
        android:id="@+id/results_type_name"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="@dimen/app_font_medium"
       app:layout_constraintLeft_toLeftOf="@id/poke_name"
        app:layout_constraintTop_toBottomOf="@id/poke_image"
        android:text="TYPE:" />

    <TextView
        android:id="@+id/results_type_value"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginLeft="48dp"
        android:textSize="@dimen/app_font_medium"
        app:layout_constraintLeft_toRightOf="@id/results_type_name"
        app:layout_constraintTop_toBottomOf="@id/poke_image"
        tools:text="water" />

    <TextView
        android:id="@+id/results_height_name"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="@dimen/app_font_medium"
        app:layout_constraintLeft_toLeftOf="@id/poke_name"
        app:layout_constraintTop_toBottomOf="@id/results_type_name"
        android:text="HEIGHT:" />

    <TextView
        android:id="@+id/results_height_value"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="@dimen/app_font_medium"
        app:layout_constraintLeft_toLeftOf="@id/results_type_value"
        app:layout_constraintTop_toBottomOf="@id/results_type_name"
        tools:text="22" />

    <TextView
        android:id="@+id/results_weight_name"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="@dimen/app_font_medium"
        app:layout_constraintLeft_toLeftOf="@id/poke_name"
        app:layout_constraintTop_toBottomOf="@id/results_height_name"
        android:text="WEIGHT:" />

    <TextView
        android:id="@+id/results_weight_value"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="@dimen/app_font_medium"
        app:layout_constraintLeft_toLeftOf="@id/results_height_value"
        app:layout_constraintTop_toBottomOf="@id/results_height_name"
        tools:text="33" />

    <TextView
        android:id="@+id/results_attack_name"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="@dimen/app_font_medium"
        app:layout_constraintLeft_toLeftOf="@id/poke_name"
        app:layout_constraintTop_toBottomOf="@id/results_weight_name"
        android:text="ATTACK:" />

    <TextView
        android:id="@+id/results_attack_value"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="@dimen/app_font_medium"
        app:layout_constraintLeft_toLeftOf="@id/results_weight_value"
        app:layout_constraintTop_toBottomOf="@id/results_weight_name"
        tools:text="33" />

    <TextView
    android:id="@+id/results_defense_name"
    android:layout_width="wrap_content"
    android:layout_height="56dp"
    android:textSize="@dimen/app_font_medium"
    app:layout_constraintLeft_toLeftOf="@id/poke_name"
    app:layout_constraintTop_toBottomOf="@id/results_attack_name"
    android:text="DEFENSE:" />

    <TextView
        android:id="@+id/results_defense_value"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:textSize="@dimen/app_font_medium"
        app:layout_constraintLeft_toLeftOf="@id/results_attack_value"
        app:layout_constraintTop_toBottomOf="@id/results_attack_name"
        tools:text="33" />

</android.support.constraint.ConstraintLayout>